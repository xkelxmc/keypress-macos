{
  "name": "keypress-macos",
  "private": true,
  "scripts": {
    "start": "(pkill -x Keypress || true) && ./Scripts/package_app.sh && ./Keypress.app/Contents/MacOS/Keypress &",
    "start:open": "./Scripts/compile_and_run.sh",
    "start:test": "./Scripts/compile_and_run.sh --test",
    "stop": "pkill -x Keypress 2>/dev/null || true",
    "build": "swift build",
    "build:release": "swift build -c release",
    "test": "swift test",
    "lint": "swiftlint --strict",
    "format": "swiftformat Sources Tests",
    "check": "swiftformat Sources Tests --lint && swiftlint --strict",
    "package": "./Scripts/package_app.sh",
    "package:release": "./Scripts/package_app.sh release"
  }
}
